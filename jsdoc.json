{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules/|docs/|dist/)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "./docs/api",
    "recurse": true,
    "readme": "README.md",
    "template": "node_modules/docdash"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  }
} 